<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:scrollX="1300px"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/img_1">
            </ImageView>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="460dp">
    </androidx.viewpager2.widget.ViewPager2>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:id="@+id/button2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="460dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <io.alterac.blurkit.BlurLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true"
            app:blk_blurRadius="20"
            app:blk_cornerRadius="20dp"
            app:blk_downscaleFactor="0.08"
            app:blk_fps="60">
            <TextView
                android:id="@+id/text_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/anxiety"
                android:textAllCaps="false"
                android:textColor="@android:color/white"></TextView>
        </io.alterac.blurkit.BlurLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">
        <io.alterac.blurkit.BlurLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true"
            android:textAllCaps="false"
            app:blk_blurRadius="20"
            app:blk_cornerRadius="20dp"
            app:blk_downscaleFactor="0.08"
            app:blk_fps="60">
            <TextView
                android:id="@+id/textButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/stress"
                android:textAllCaps="false"
                android:textColor="@android:color/white"></TextView>
        </io.alterac.blurkit.BlurLayout>
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/button4"
    android:layout_width="180dp"
    android:layout_height="52dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button3">
    <io.alterac.blurkit.BlurLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true"
        android:textAllCaps="false"
        app:blk_blurRadius="20"
        app:blk_cornerRadius="20dp"
        app:blk_downscaleFactor="0.08"
        app:blk_fps="60">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/esteem"
            android:textAllCaps="false"
            android:textColor="@android:color/white"></TextView>
    </io.alterac.blurkit.BlurLayout>
</RelativeLayout>


<RelativeLayout
    android:id="@+id/button5"
    android:layout_width="180dp"
    android:layout_height="52dp"
    android:textAllCaps="false"
    android:layout_marginStart="19dp"
    android:layout_marginTop="460dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/button2"
    app:layout_constraintTop_toTopOf="parent">
    <io.alterac.blurkit.BlurLayout
        android:clipToOutline="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blk_blurRadius="20"
        app:blk_cornerRadius="20dp"
        app:blk_downscaleFactor="0.08"
        app:blk_fps="60">
        <TextView
            android:id="@+id/textButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sleep"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            ></TextView>
    </io.alterac.blurkit.BlurLayout>
</RelativeLayout>


<RelativeLayout
    android:id="@+id/button6"
    android:layout_width="180dp"
    android:layout_height="52dp"
    android:layout_marginTop="16dp"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button5">
    <io.alterac.blurkit.BlurLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true"
        app:blk_blurRadius="20"
        app:blk_cornerRadius="20dp"
        app:blk_downscaleFactor="0.08"
        app:blk_fps="60">
        <TextView
            android:id="@+id/textButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/happines"
            android:textAllCaps="false"
            android:textColor="@android:color/white"></TextView>
    </io.alterac.blurkit.BlurLayout>
</RelativeLayout>


    <RelativeLayout
        android:id="@+id/button7"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6">

        <io.alterac.blurkit.BlurLayout
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:clipToOutline="true"
            app:blk_blurRadius="20"
            app:blk_cornerRadius="20dp"
            app:blk_downscaleFactor="0.08"
            app:blk_fps="60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/productivity"
                android:textAllCaps="false"
                android:textColor="@android:color/white"></TextView>
        </io.alterac.blurkit.BlurLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:text="@string/what_brings"
        android:textColor="@color/textcolorfirst"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/we_recognize"
        android:textColor="@color/textcolor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator"
        android:layout_width="419dp"
        android:layout_height="230dp"
        app:ci_margin = "10dp"
        android:background="@color/trans"
        app:ci_height = "15dp"
        app:ci_width = "15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </me.relex.circleindicator.CircleIndicator3>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCont"
        android:layout_width="379dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/btn_continue"
        android:text="@string/btnContinue"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:visibility="invisible"
        android:textColor="@color/text_button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_view_velcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/first_screen_bg">
    </ImageView>

    <TextView
    android:layout_width="wrap_content"
    android:id="@+id/welcome_text_view"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:text="@string/welcome"
    android:textColor="@android:color/white"
    android:textSize="40dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>